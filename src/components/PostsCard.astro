---
// File: src/components/PostsCard.astro
import { ArrowRight } from 'lucide-react'

interface Props {
  posts: Array<{
    slug: string;
    data: {
      title: string;
      pubDate: Date;
      description: string;
    };
  }>;
}

const { posts } = Astro.props;
---

<div class="space-y-8">
  {posts.map((post) => (
    <article class="bg-white border-4 border-black shadow-[8px_8px_0px_0px_black] p-6 md:p-8 transform hover:-translate-y-1 transition-transform duration-200 dark:bg-black dark:border-main dark:shadow-[8px_8px_0px_0px_rgba(244,114,182,1)]">
      <div class="space-y-4">
        <time class="block text-sm font-bold uppercase tracking-wide text-pink-600 dark:text-pink-400">
          {new Date(post.data.pubDate).toLocaleDateString('en-US', {
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: '2-digit',
          }).toUpperCase()}
        </time>
        
        <h2 class="text-2xl md:text-3xl font-black leading-tight text-black dark:text-white">
          {post.data.title}
        </h2>
        
        <p class="text-lg text-gray-700 dark:text-gray-300 line-clamp-3">
          {post.data.description}
        </p>

        <a 
          href={`/posts/${post.slug}`}
          class="group inline-flex items-center bg-black text-white text-lg py-3 px-6 rounded-none transition-all duration-200 shadow-[4px_4px_0px_0px_rgba(236,72,153,1)] hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-[1px_1px_0px_0px_rgba(236,72,153,1)] dark:bg-white dark:text-black dark:shadow-[4px_4px_0px_0px_rgba(236,72,153,1)]"
        >
          Read More
          <ArrowRight className="ml-2 h-5 w-5 transition-transform duration-200 group-hover:translate-x-1" />
        </a>
      </div>
    </article>
  ))}
</div>